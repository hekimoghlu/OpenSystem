# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false

[Makefile*]
indent_style = tab
indent_size = 8

[*.vala]
indent_style = space
indent_size = 4

[*.{ui|xml}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 4
