{
    "name" : "foundry",
    "buildsystem" : "meson",
    "config-opts" : [
        "-Dgtk=false",
        "-Dwebkit=false",
        "-Dcommonmark=false",
        "-Dfeature-debugger=false",
        "-Dfeature-flatpak=true",
        "-Dfeature-git=false",
        "-Dfeature-llm=false",
        "-Dfeature-lsp=false",
        "-Dfeature-templates=false",
        "-Dfeature-text=false",
        "-Dfeature-vcs=false",
        "-Dplugin-deviced=false"
    ],
    "sources" : [
        {
            "type" : "git",
            "url" : "https://gitlab.gnome.org/GNOME/foundry.git",
            "branch" : "main"
        }
    ],
    "modules" : [
        "libflatpak.json",
        {
            "name" : "libyaml",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/yaml/libyaml.git",
                    "branch" : "master"
                }
            ]
        },
        {
            "name" : "libdex",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=debugoptimized",
                "-Ddocs=false",
                "-Dintrospection=enabled",
                "-Dexamples=false",
                "-Dtests=false",
                "-Dsysprof=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libdex.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "gom",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gom.git",
                    "branch" : "master"
                }
            ]
        },
        {
            "name" : "libpeas",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dlua51=false",
                "-Dpython3=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libpeas.git",
                    "branch" : "main"
                }
            ]
        }
    ]
}
