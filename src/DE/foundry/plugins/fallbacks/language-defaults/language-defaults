[automake]
insert-spaces-instead-of-tabs = false
tab-width = 8
implicit-trailing-newline = true

[c]
insert-spaces-instead-of-tabs = true
tab-width = 8
indent-width = 2
auto-indent = true
insert-matching-brace = true
implicit-trailing-newline = true
overwrite-matching-brace = true
spaces-style = before-left-paren;

