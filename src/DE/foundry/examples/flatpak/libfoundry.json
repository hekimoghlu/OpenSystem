            "config-opts" : [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib",
                "-DCMARK_TESTS=OFF",
                "-DCMARK_SHARED=OFF"
            ],
            "cleanup" : [
                "/bin/cmark"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/commonmark/cmark",
