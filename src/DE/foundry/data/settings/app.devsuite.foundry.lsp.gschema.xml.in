<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="app.devsuite.foundry.lsp" path="/app/devsuite/foundry/lsp/" gettext-domain="foundry">
    <key name="log-stderr" type="b">
      <default>false</default>
      <summary>Log LSP errors to Stderr</summary>
      <description>If enabled, the stderr will be mapped to the console for verbose logging.</description>
    </key>
  </schema>

  <!-- /app/devsuite/foundry/lsp/language/$id -->
  <schema id="app.devsuite.foundry.lsp.language" gettext-domain="foundry">
    <key name="preferred-module-name" type="s">
      <default>''</default>
      <summary>module-name of preferred language server</summary>
      <description>If set, the plugin specified by module-name will be the preferred language server to load for the language. Language id's should make GtkSourceView language ids.</description>
    </key>
  </schema>
</schemalist>
