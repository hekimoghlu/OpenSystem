[library]
version = "@version@"
browse_url = "https://gitlab.gnome.org/chergert/foundry/"
repository_url = "https://gitlab.gnome.org/chergert/foundry.git"
website_url = "https://gitlab.gnome.org/chergert/foundry/"
docs_url = "https://gnome.pages.gitlab.gnome.org/foundry/"
authors = "Christian Hergert"
license = "LGPL-2.1-or-later"
description = "A GNOME library providing IDE capabilities"
dependencies = ["Gio-2.0", "Dex-1", "GLib-2.0", "GObject-2.0", "Json-1.0", "Gtk-4.0", "GtkSource-5", "Adw-1"]
devhelp = true
search_index = true

  [dependencies."GObject-2.0"]
  name = "GObject"
  description = "The base type system library"
  docs_url = "https://docs.gtk.org/gobject/"

  [dependencies."GLib-2.0"]
  name = "GLib"
  description = "The base type system library"
  docs_url = "https://docs.gtk.org/glib/"

  [dependencies."Gio-2.0"]
  name = "GIO"
  description = "GObject Interfaces and Objects, Networking, IPC, and I/O"
  docs_url = "https://docs.gtk.org/gio/"

  [dependencies."Dex-1"]
  name = "Dex-1"
  description = "Future-based programming for GNOME"
  docs_url = "https://gnome.pages.gitlab.gnome.org/libdex/"

  [dependencies."Gtk-4.0"]
  name = "Gtk-4.0"
  description = "The GTK toolkit"
  docs_url = "https://docs.gtk.org/gtk4/"

  [dependencies."Gdk-4.0"]
  name = "Gdk-4.0"
  description = "The GTK toolkit"
  docs_url = "https://docs.gtk.org/gdk4/"

  [dependencies."Gsk-4.0"]
  name = "Gsk-4.0"
  description = "The GTK toolkit"
  docs_url = "https://docs.gtk.org/gsk4/"

  [dependencies."Json-1.0"]
  name = "Json-1.0"
  description = "JSON parser and generator"
  docs_url = "https://gnome.pages.gitlab.gnome.org/json-glib/"

[theme]
name = "basic"
show_index_summary = true
show_class_hierarchy = true

[source-location]
base_url = "https://gitlab.gnome.org/GNOME/foundry/-/blob/main/"

[extra]
# The same order will be used when generating the index
content_files = [
  "overview.md",
]

urlmap_file = "urlmap.js"
