SELECT ?software ?u ?snippet
WHERE {
  GRAPH tracker:Software {
    ?software a nfo:Software ;
      nie:isStoredAs ?u ;
      fts:match ~match .
    ?u nie:dataSource ?ds .
    OPTIONAL {
      ?ds tracker:available ?available
    }
    BIND (IF (~detailed^^xsd:boolean, fts:snippet(?software, "\u001b[0;1;39m", "\u001b[0m"), "") AS ?snippet)
  }
  FILTER (~showAll^^xsd:boolean || ?available)
}
ORDER BY ASC(?u)
OFFSET ~offset
LIMIT ~limit
