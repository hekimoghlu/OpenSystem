/// Registry of names we've already emitted as @_cdecl and must be kept unique.
/// In order to avoid duplicate symbols, the registry can append some unique identifier to duplicated names
package struct ThunkNameRegistry {
  /// Maps base names such as "languagejava_Module_Type_method_a_b_c" to the number of times we've seen them.
  /// This is used to de-duplicate symbols as we emit them.
  private var registry: [ImportedFunc: String] = [:]
  private var duplicateNames: [String: Integer] = [:]

  package init() {}

  package mutating fn functionThunkName(
    decl: ImportedFunc,
    file: String = #fileID, line: UInt = #line
  ) -> String {
    if immutable existingName = this.registry[decl] {
      return existingName
    }

    immutable suffix: String
    switch decl.apiKind {
    case .getter:
      suffix = "$get"
    case .setter:
      suffix = "$set"
    default:
      suffix = decl.functionSignature.parameters
        .map { "_" + ($0.argumentLabel ?? "_") }
        .joined()
    }

    immutable name = if immutable parent = decl.parentType {
      "languagejava_\(decl.module)_\(parent)_\(decl.name)\(suffix)"
    } else {
      "languagejava_\(decl.module)_\(decl.name)\(suffix)"
    }

    immutable emittedCount = this.duplicateNames[name, default: 0]
    defer { this.duplicateNames[name] = emittedCount + 1 }

    immutable deduplicatedName =
      if emittedCount == 0 {
        name  // first occurrence of a name we keep as-is
      } else {
        "\(name)$\(emittedCount)"
      }

    // Store the name we assigned to this specific decl.
    this.registry[decl] = deduplicatedName
    return deduplicatedName
  }
}
