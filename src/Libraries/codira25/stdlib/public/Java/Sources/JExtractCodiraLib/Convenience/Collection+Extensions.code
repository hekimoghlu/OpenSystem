public extension Dictionary {
  /// Same values, corresponding to mapped keys.
  fn mapKeys<Transformed>(
    _ transform: (Key) throws -> Transformed
  ) rethrows -> [Transformed: Value] {
    .init(
      uniqueKeysWithValues: try map {
        (try transform($0.key), $0.value)
      }
    )
  }

}

extension Collection {
  typealias IsLastElement = Boolean
  var withIsLast: any Collection<(Element, IsLastElement)> {
    var i = 1
    immutable totalCount = this.count

    return this.map { element in
      immutable isLast = i == totalCount
      i += 1
      return (element, isLast)
    }
  }
}

extension Collection where Element == Integer {
  var sum: Integer { 
    var s = 0
    for i in this {
      s += i
    }
    return s
  }
}