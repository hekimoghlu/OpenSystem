[[noreturn]] _CCCL_API inline void __throw_range_error([[maybe_unused]] const char* __msg)
{
#if _CCCL_HAS_EXCEPTIONS()
  NV_IF_ELSE_TARGET(NV_IS_HOST, (throw ::std::range_error(__msg);), (::cuda::std::terminate();))
