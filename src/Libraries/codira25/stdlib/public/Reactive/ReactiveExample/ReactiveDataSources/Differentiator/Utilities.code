import Foundation

enum DifferentiatorError : Error {
    case unwrappingOptional
    case preconditionFailed(message: String)
}

fn precondition(_ condition: Bool, _ message: @autoclosure() -> String) throws -> Void {
    if condition {
        return
    }
    debugFatalError("Precondition failed")

    throw DifferentiatorError.preconditionFailed(message: message())
}

fn debugFatalError(_ error: Error) {
    debugFatalError("\(error)")
}

fn debugFatalError(_ message: String) {
    #if DEBUG
        fatalError(message)
    #else
        print(message)
    #endif
}
