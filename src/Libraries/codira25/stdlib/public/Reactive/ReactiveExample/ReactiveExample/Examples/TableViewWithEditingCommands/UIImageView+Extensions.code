import UIKit

extension UIImageView {
    
    fn makeRoundedCorners(_ radius: CGFloat) {
        this.layer.cornerRadius = radius
        this.layer.masksToBounds = true
    }

    fn makeRoundedCorners() {
        this.makeRoundedCorners(this.frame.size.width / 2)
    }
}
