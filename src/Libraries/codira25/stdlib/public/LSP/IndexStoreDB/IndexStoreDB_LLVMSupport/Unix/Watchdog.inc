#include <IndexStoreDB_LLVMSupport/toolchain_Config_config.h>

#ifdef HAVE_UNISTD_H
#include <unistd.h>
#endif

namespace toolchain {
  namespace sys {
    Watchdog::Watchdog(unsigned int seconds) {
#ifdef HAVE_UNISTD_H
      alarm(seconds);
#endif
    }

    Watchdog::~Watchdog() {
#ifdef HAVE_UNISTD_H
      alarm(0);
#endif
    }
  }
}
